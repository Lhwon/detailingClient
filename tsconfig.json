{
  "compilerOptions": {
    "target": "es6", // JavaScript 버전 정의
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./src", // src를 기준으로 절대 경로 지정
    "paths": { // 절대 경로 별칭 설정
      "*": ["*"],
      "components/*": ["component/components/*"]
    },
    "allowJs": true, // TypeScript 파일에서 JS 파일 허용
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx" // JSX 지원 설정
  },
  "include": [
    "src" // src 폴더 아래 모든 파일 컴파일
  ],
  "exclude": [
    "node_modules" // node_modules는 컴파일 제외
  ]
}
